      <th scope="col">Complaint ID</th>
      <th scope="col">Student Name</th>
      <th scope="col">Student Contact</th>
      <th scope="col">Description of the Complaint</th>
    </tr>
  </thead>
  
<tbody>
    {{#each complaints}}
